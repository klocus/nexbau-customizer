{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/en-US/**",
        "destination": "/en-US/index.html"
      },
      {
        "source": "/pl/**",
        "destination": "/pl/index.html"
      }
    ],
    "redirects": [
      {
        "source" : "/",
        "destination" : "/pl",
        "type" : 301
      }
    ]
  }
}
